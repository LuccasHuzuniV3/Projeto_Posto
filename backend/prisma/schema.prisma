generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model usuario {
  id           Int         @id @default(autoincrement())
  nome         String
  email        String      @unique
  senha        String
  fornecedorId Int?        @unique
  role         String      @default("Admin")
  fornecedor   fornecedor? @relation(fields: [fornecedorId], references: [id])

  @@map("user")
}

model fornecedor {
  id       Int      @id @default(autoincrement())
  nome     String
  cnpj     String   @unique
  telefone String
  email    String
  endereco String
  Status   Boolean  @default(true)
  preco    preco[]
  usuario  usuario?
}

model preco {
  id            Int         @id @default(autoincrement())
  valor         Float
  dataCadastro  DateTime    @default(now())
  fornecedorId  Int
  combustivelId Int
  compra        compra[]
  combustivel   combustivel @relation(fields: [combustivelId], references: [id])
  fornecedor    fornecedor @relation(fields: [fornecedorId], references: [id], onDelete: Cascade)
}

model combustivel {
  id    Int     @id @default(autoincrement())
  tipo  String
  preco preco[]
}

model compra {
  id         Int      @id @default(autoincrement())
  quantidade Float
  dataCompra DateTime @default(now())
  custoTotal Float
  precoId    Int
  preco      preco    @relation(fields: [precoId], references: [id])
}
