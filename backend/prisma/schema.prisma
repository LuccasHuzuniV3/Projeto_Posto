generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Tables
model usuario {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  senha    String
  role     String @default("Admin")

  fornecedorId Int?     @unique 
  fornecedor   fornecedor? @relation(fields: [fornecedorId], references: [id])

  @@map("user")
}

model fornecedor {
  id        Int      @id @default(autoincrement())
  nome      String  
  cnpj      String   @unique
  telefone  String
  email     String
  endereco  String
  Status    Boolean  @default(true)

  preco     preco[]
  usuario   usuario?
}

model preco {
  id                Int      @id @default(autoincrement())
  valor             Float
  dataCadastro      DateTime @default(now())
  fornecedorId      Int
  combustivelId     Int

  combustivel      combustivel @relation(fields: [combustivelId], references: [id])
  fornecedor       fornecedor @relation(fields: [fornecedorId], references: [id])

  compra          compra[]
}

model combustivel {
  id        Int      @id @default(autoincrement())
  tipo      String

  preco     preco[]
}

model compra{
  id            Int      @id @default(autoincrement())
  quantidade    Float
  dataCompra    DateTime @default(now())
  custoTotal    Float 
  precoId       Int

  preco         preco @relation(fields: [precoId], references: [id])
}

